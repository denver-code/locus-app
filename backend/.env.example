# Required Settings
# ---------------
# Generate a secure key: `openssl rand -hex 32`
SECRET_KEY=replace_with_secure_key
ALGORITHM=HS256

# Database Configuration
# ---------------------
# SQLite (development)
DB_URL=sqlite:///./kanban.db

# PostgreSQL (production)
# DB_URL=postgresql://user:password@localhost:5432/kanban
# POSTGRES_USER=
# POSTGRES_PASSWORD=
# POSTGRES_DB=

# Optional Settings
# ---------------
# Application
APP_NAME=Locus API
DEBUG=false
USE_STATIC=false

CORS_ORIGINS=http://localhost:3000,http://localhost:8080


# Database Behavior
DB_ECHO=false        # Enable SQL query logging
DROP_ALL=false       # Reset database on startup
POPULATE_DB=false    # Generate test data on startup

# Frontend Integration
STATIC_FILES_DIR=static  # Directory for frontend build files 